version: "3.43"

tasks:
  template:
    desc: Fetch template updates
    interactive: true
    env:
      GIT_CONFIG_GLOBAL: ""
      GIT_CONFIG_SYSTEM: ""
    cmds:
      - >-
        copier
        update
        --answers-file
        .copier-answers.yaml
        {{ '{{ .CLI_ARGS }}' }}
  flake:
    desc: Update flake.lock
    cmds:
      - >-
        nix
        --accept-flake-config
        --extra-experimental-features
        'nix-command flakes'
        --no-warn-dirty
        flake
        update
        {{ '{{ .CLI_ARGS }}' }}
  fmt:
    desc: Format files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
        vars:
          CLI_ARGS: ""
      {%- endif %}
      - >-
        trunk
        fmt
        {{ '{{ .CLI_ARGS }}' }}
  lint:
    desc: Lint files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
        vars:
          CLI_ARGS: ""
      {%- endif %}
      - >-
        trunk
        check
        {{ '{{ .CLI_ARGS }}' }}
  {%- if docs %}
  install-docs:
    desc: Install docs dependencies
    dir: docs/
    sources:
      - package-lock.json
      - package.json
      - ../flake.lock
      - ../*.nix
      - ../Taskfile.dist.yaml
      - ../{taskfile,Taskfile}.{yaml,yml}
    generates:
      - node_modules/**/*
    cmds:
      - >-
        npm
        install
        {{ '{{ .CLI_ARGS }}' }}
  install-docs-internal:
    desc: Install docs dependencies quietly
    internal: true
    dir: docs/
    cmds:
      - task: install-docs
        vars:
          CLI_ARGS: >-
            --prefer-offline
            --no-audit
            --no-fund
            --quiet
            --no-progress
  update-docs:
    desc: Update docs package-lock.json
    dir: docs/
    cmds:
      - >-
        npm
        update
        {{ '{{ .CLI_ARGS }}' }}
  docs:
    desc: Run docusaurus
    dir: docs/
    interactive: true
    cmds:
      - task: install-docs-internal
        vars:
          CLI_ARGS: ""
      - >-
        npm
        exec
        --
        docusaurus
        {{ '{{ .CLI_ARGS | default "start --host 0.0.0.0" }}' }}
  {%- endif %}
  secret:
    desc: Edit secrets
    interactive: true
    cmds:
      - >-
        sops
        {{ '{{ .CLI_ARGS }}' }}
  init:
    desc: Initialize Terraform
    interactive: true
    cmds:
      - >-
        terraform
        -chdir=src/
        init
        {{ '{{ .CLI_ARGS }}' }}
  plan:
    desc: Create an execution plan
    interactive: true
    cmds:
      - >-
        terraform
        -chdir=src/
        plan
        {{ '{{ .CLI_ARGS }}' }}
  apply:
    desc: Apply changes
    interactive: true
    cmds:
      - >-
        terraform
        -chdir=src/
        apply
        {{ '{{ .CLI_ARGS }}' }}
